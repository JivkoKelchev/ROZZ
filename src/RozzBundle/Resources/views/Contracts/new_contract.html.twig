{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


{% block body %}
    <div class="jumbotron" style="padding: 20px">
        {{ form_start(form) }}
        {{ form_row(form.reason) }}
        {{ form_row(form.resheniq) }}
        {{ form_row(form.application) }}
        {{ form_row(form.years) }}
        {{ form_row(form.neighbours) }}
        {#{{ form_row(form.examiner) }}#}

        <div class="form-group">
            <label class="col-sm-2 control-label">
                Съгласували
            </label>
            <div class="col-sm-10">
                {# iterate over each existing tag and render its only field: name #}
                {% for examiner in data.examiners %}
                    <span style="margin: 5px;font-size:14px;"> {{ examiner.name }}
                        <a href="{{ path('remove-examiner-from-new-contract', {'id': examiner.id}) }}">
                            <span style='font-size:10px;'>   &#9940;</span>
                        </a>
                    </span>
                    <br><br>
                {% endfor %}
                <br>
                <a style='color:green;' href="{{ path('add-examiner-to-contract') }}">добави</a>
            </div>
        </div>


        <input class="col-sm-offset-2" type="submit" value="Направи договор">
        {{ form_end(form) }}
    </div>
{% endblock %}