{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        #contract{
            width : 90%;
            border: solid 1px;
            border-color: black ;
            margin : 10px;
            padding-top: 30px;
            padding-left : 10px;
            padding-right : 80px;

        }
        .placeholder{
            color: blue;
            font-size: 14pt;
            font-family: 'Times New Roman', serif;
            white-space: normal;
        }
        p   {margin: 0 -27pt 0.0001pt 0;
            font-size: 14pt;
            font-family: 'Times New Roman', serif;
            color: #000000;
            font-variant-ligatures: normal;
            font-variant-caps: normal;
            font-weight: 400;
            letter-spacing: normal;
            orphans: 2; text-indent: 0;
            text-transform: none;
            white-space: normal;
            word-break:break-all;
            widows: 2;
            word-spacing: 0;
            -webkit-text-stroke-width: 0;
            text-decoration-style: initial;
            text-decoration-color: initial;
            text-align: justify;
        }
    </style>
{% endblock %}

{% block body %}

<div>
    {#NEW VlEW#}
    <div class="jumbotron" style="padding: 10px;position: relative;">

        {% if data.num %}
            <h3>Договор № {{ data.num }}</h3>
        {% else %}
            <a class="btn btn-default btn-sm" href="{{ path('contract_add_number',{'id':data.id}) }}">
                <span class="glyphicon glyphicon-plus">
                Добави номер
                </span>
            </a>
        {% endif %}

        <a class="btn btn-default btn-sm" href="{{ path('contract_rtf', {'id':data.id}) }}">
            <span class="glyphicon glyphicon-save-file">
                Изтегли файл
            </span>
        </a>

        <a style="position: absolute; right: 150px" class="btn btn-default btn-sm" href="{{ path('contracts_edit',{'contractId':data.id}) }}">
            <span class="glyphicon glyphicon-edit">
                Редацтиране
            </span>
        </a>

        <a style="position: absolute; right: 10px" class="btn btn-danger btn-sm" href="{{ path('contract_delete',{'id':data.id}) }}">
            <span class="glyphicon glyphicon-remove">
                Изтриване
            </span>
        </a>
        <br>
        {% if data.type == 3 %}
            <br>
            {{ difference|raw }}
            <br>
            <a class="btn btn-default" href="{{ path('contract_view',{'id':data.getAnnexContractId}) }}">
                <span class="glyphicon glyphicon-file">
                    Предлед на предходния договор
                </span>
            </a>
        {% endif %}
    </div>


     {% include 'RozzBundle:Contracts:contract.html.twig' %}

</div>

{% endblock %}